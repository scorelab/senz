{
  "name": "senz-admin-backend",
  "version": "1.0.0",
  "description": "This is the backend-API of the senz-admin panel.",
  "husky": {
    "hooks": {
      "pre-push": "CI=true npm test"
    }
  },
  "main": "main.js",
  "scripts": {
    "test": "export NODE_ENV=test && mocha  --exit --timeout 30000",
    "start": "export NODE_ENV=dev && nodemon main.js",
    "dev": "export NODE_ENV=dev && nodemon main.js",
    "coverage": "nyc --reporter=html --reporter=text npm test",
    "coverage-html-report": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/scorelab/senz/issues"
  },
  "homepage": "https://github.com/scorelab/senz#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "config": "^3.0.1",
    "cors": "^2.8.5",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "istanbul": "^0.4.5",
    "jsonwebtoken": "^8.5.0",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.4.18",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": "8.11.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "husky": "^2.4.1",
    "mocha": "^6.0.2",
    "mockgoose": "^8.0.4",
    "nyc": "^15.0.0"
  }
}
